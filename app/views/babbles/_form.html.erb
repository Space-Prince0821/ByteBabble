<%= simple_form_for(@babble) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :babble, label: "Babble about it", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Compose a new babble..." %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>